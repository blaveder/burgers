<div class="container">
    <div class="row text-center">

        <h1>EAT BOB'S BURGERS!</h1>

    </div>
    <div class="row">

        <div id="eaten" class="col-md-6 text-center" class="task">
            <p>Burgers Eaten. Yummy!</p>
            {{#each burger_data}} {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly> {{/if}} {{/each}}
        </div>

        <div class="col-md-6 text-center">

            {{#each burger_data}} {{#unless this.devoured}}
            <div class="col-xs-9 text-center">
                <pre>{{this.id}}. {{this.burger_name}}</pre>
            </div>
            <div class="col-xs-3 text-center">

                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                    <input type="hidden" name="burger_id" type="text" value={{this.id}}>

                    <button type="submit" class="btn btn-default">DEVOUR IT!</button>
                </form>
            </div>
            {{/unless}} {{/each}}

        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center enter_selection">
            <form method="POST" action="/burgers/create">
                <textarea type="text" class="form-control" id="enter_text" value="" placeholder="Add a Burger for Consumption..." name="burger_name"
                    style="margin-bottom: 2%;"></textarea>

                <button id="add" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>